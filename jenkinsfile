pipeline {

 agent any

 parameters{
   string(name: 'component', defaultValue: '', description: 'App Component Name')
 }

 stages {

   stage('Clone App Repo'){
     steps {
       dir('APP'){
           git branch: 'main', url: 'https://github.com/swedevops/${component}'
       }
      }

    }

   stage('Helm Deploy') {
   steps {

     sh 'helm upgrade -i ${component} . -f APP/value.yaml'

     }
  }

 }

}